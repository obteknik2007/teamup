{% extends 'layout.html.twig' %}

{% block header %}{# Reprend l'affiche de l'image d'accueil et du menu #}
  {{ parent() }}
{% endblock %} 

{% block reduction_image %}{# Affiche l'image d'accueil en taille reduite #}
  {{ parent() }} 
{% endblock %}

{% block index %}{# Vide pour ne pas afficher l'image en grande taille #}
{% endblock %}

{% block content %} 
    {% if error %}
        <div class="alert alert-danger">
            Identification incorrecte
        </div>
    {% endif %}
<div class="container"> 
    <div class="row">  
        <div class="col-md-6 col-md-offset-3"> 
            <fieldset>
                <legend>Je me connecte</legend>
      
                <form method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control perso" name="_username" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <label>Mot de passe</label>
                        <input type="password" class="form-control perso" name="_password">
                    </div>
                    <div class="form-btn-group text-center">
                        <button type="submit" class="btn btn-primary">
                            Se connecter
                        </button>
                    </div>
                </form>
            </fieldset>
        </div>
    </div> 
</div>  
    
{% endblock %}

